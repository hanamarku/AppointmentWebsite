@using Microsoft.AspNet.Identity
@model Online_Appointment.Models.ApplicationUser
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Doktor/Views/Shared/_DoktorLayout.cshtml";
}

<h2>Index</h2>

@ViewBag.username
@User.Identity.GetUserName()

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.Firstname</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    Name : @Model.Firstname <br/>
                    Lastname : @Model.Lastname <br/>
                    Birthday :@Model.Birthday.Date <br/>
                    Email : @Model.Email
                </div>
            </div>
        </div>
    </div>
</div>